<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="style_button">
        <item name="android:background">@color/light_blue_800</item>
    </style>

    <style name="style_title_abm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/grey_800</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/title_text_size_product_register_fragment</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly"
        parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="colorPrimary">@color/light_blue_800</item>
        <item name="colorOnPrimary">@color/light_blue_200</item>
        <item name="iconGravity">start</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">@dimen/size_button_menu_product_view</item>
    </style>

    <style name="style_edit_text">
        <item name="android:textSize">@dimen/size_edit_text_abm</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_button_abm">
        <item name="android:textSize">@dimen/size_text_button_abm</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="space_abm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_height_space_abm</item>
    </style>

    <style name="show_data_product">
        <item name="android:textSize">@dimen/size_text_view_abm</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundColor">@color/grey_800</item>
    </style>

    <style name="card_text_view_style_list_product">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/size_text_card_view_list_product</item>
    </style>

    <style name="space_card_view_vertical">
        <item name="android:layout_width">@dimen/size_height_space_card_view_list_product</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="navigation_drawer_menu" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/size_text_navigation_drawer</item>
    </style>



</resources>

